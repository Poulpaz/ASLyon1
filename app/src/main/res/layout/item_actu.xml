<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_item_actu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_item_actu"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_title_item_actu"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:text="Article"
            style="@style/TitleText"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_item_actu"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_pubDate_item_actu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14/04/2019"
            app:layout_constraintTop_toBottomOf="@id/tv_title_item_actu"
            app:layout_constraintStart_toEndOf="@id/iv_item_actu"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_author_item_actu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ambre"
            app:layout_constraintTop_toBottomOf="@id/tv_pubDate_item_actu"
            app:layout_constraintStart_toEndOf="@id/iv_item_actu"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>