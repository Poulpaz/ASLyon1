<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_item_event"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_item_actu"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_calendar"
            android:padding="15dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_title_item_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_item_actu"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_date_item_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_item_actu"
            app:layout_constraintTop_toBottomOf="@id/tv_title_item_event" />

        <TextView
            android:id="@+id/tv_place_item_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lyon 7Ã¨me"
            app:layout_constraintTop_toBottomOf="@id/tv_date_item_event"
            app:layout_constraintStart_toEndOf="@id/iv_item_actu"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_price_item_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7 euros"
            app:layout_constraintTop_toBottomOf="@id/tv_place_item_event"
            app:layout_constraintStart_toEndOf="@id/iv_item_actu"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_description_item_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Match de basket formidable."
            app:layout_constraintTop_toBottomOf="@id/tv_price_item_event"
            app:layout_constraintStart_toEndOf="@id/iv_item_actu"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>