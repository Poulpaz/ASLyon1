<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_image_item_offer"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_medal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title_item_offer"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:text="Run in Lyon"
            style="@style/TitleText"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_image_item_offer"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_date_item_offer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="08/01/2019"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_image_item_offer"
            app:layout_constraintTop_toBottomOf="@id/tv_title_item_offer" />

        <TextView
            android:id="@+id/tv_number_team_item_offer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="150 places diponibles"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_image_item_offer"
            app:layout_constraintTop_toBottomOf="@id/tv_date_item_offer" />

        <TextView
            android:id="@+id/tv_price_item_offer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="8 â‚¬"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_image_item_offer"
            app:layout_constraintTop_toBottomOf="@id/tv_number_team_item_offer" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>